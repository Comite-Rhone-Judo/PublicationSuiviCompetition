<Window x:Class="AppPublication.IHM.Commissaire.ConfigurationEcranAppel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:local="clr-namespace:AppPublication.IHM.Commissaire"
        xmlns:controles="clr-namespace:AppPublication.Controles"
        mc:Ignorable="d"
        Title="Configuration des Écrans d'Appel" Height="500" Width="900" 
        Background="Black">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/AppPublication;component/Styles/StandardStyles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/AppPublication;component/Styles/ConverterStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>

        </ResourceDictionary>
    </Window.Resources>

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Style="{StaticResource Header1Style}" Margin="10 10 5 10" >
            <TextBlock Text="Liste des Écrans" Style="{StaticResource Header1TextStyle}"/>
        </StackPanel>

        <Border BorderThickness="1" Grid.Row="1" Grid.Column="0" BorderBrush="White" Margin="10 0 5 10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="auto"/>
                </Grid.RowDefinitions>

                <telerik:RadGridView Grid.Row="0" 
                                     ItemsSource="{Binding Ecrans}"
                                     SelectedItem="{Binding SelectedEcran}"
                                     Style="{StaticResource GridViewStyle1}"
                                     CanUserInsertRows="False"
                                     IsReadOnly="True"
                                     AutoGenerateColumns="False">
                    <telerik:RadGridView.Columns>
                        <telerik:GridViewDataColumn Header="N°" DataMemberBinding="{Binding Numero}" Width="40" IsReadOnly="True"/>
                        <telerik:GridViewDataColumn Header="Nom Host" DataMemberBinding="{Binding HostName}" Width="*"/>
                        <telerik:GridViewDataColumn Header="Adresse IP" DataMemberBinding="{Binding IPAddress}" Width="*"/>
                        <telerik:GridViewDataColumn Header="Tapis Affectés" DataMemberBinding="{Binding Tapis}" Width="*">
                            <telerik:GridViewDataColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Tapis, Converter={StaticResource ListIntToStringConverter}}" VerticalAlignment="Center" Margin="5 0"/>
                                </DataTemplate>
                            </telerik:GridViewDataColumn.CellTemplate>
                        </telerik:GridViewDataColumn>

                        <telerik:GridViewColumn Header="Actions" Width="100">
                            <telerik:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">
                                        <telerik:RadButton Style="{StaticResource RadButtonStyleEdit}" 
                                                           Content="pack://application:,,,/Tools;component/data/images/icons/black/edit-32.png"
                                                           ToolTip="Modifier cet écran"
                                                           Command="{Binding DataContext.CmdEditEcran, RelativeSource={RelativeSource AncestorType=telerik:RadGridView}}"
                                                           CommandParameter="{Binding}"/>
                                        <telerik:RadButton Style="{StaticResource RadButtonStyleEdit}" 
                                                           Content="pack://application:,,,/Tools;component/data/images/icons/black/delete-32.png"
                                                           ToolTip="Supprimer cet écran"
                                                           Command="{Binding DataContext.CmdDeleteEcran, RelativeSource={RelativeSource AncestorType=telerik:RadGridView}}"
                                                           CommandParameter="{Binding}"/>
                                    </StackPanel>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellTemplate>
                        </telerik:GridViewColumn>

                    </telerik:RadGridView.Columns>
                </telerik:RadGridView>

                <telerik:RadButton Grid.Row="1" 
                                   telerik:StyleManager.Theme="Expression_Dark" 
                                   Command="{Binding CmdAddNewEcran}" 
                                   HorizontalAlignment="Left" Margin="10 5"
                                   ToolTip="Commencer la configuration d'un nouvel écran.">
                    <WrapPanel Orientation="Horizontal">
                        <Image Source="pack://application:,,,/Tools;component/data/images/icons/black/add_list-32.png" Height="20" Margin="0 0 5 0"/>
                        <Label Content="Ajouter un écran" Foreground="White"/>
                    </WrapPanel>
                </telerik:RadButton>

            </Grid>
        </Border>

        <StackPanel Grid.Row="0" Grid.Column="1" Style="{StaticResource Header1Style}" Margin="5 10 10 10" >
            <TextBlock Text="{Binding TitreBlocEdition}" Style="{StaticResource Header1TextStyle}"/>
        </StackPanel>

        <Border BorderThickness="1" Grid.Row="1" Grid.Column="1" BorderBrush="White" Margin="5 0 10 10" DataContext="{Binding EcranEnEdition}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <Grid Margin="10" IsEnabled="{Binding DataContext.IsEditing, RelativeSource={RelativeSource AncestorType=Window}}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Nom du Host:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="1" Text="{Binding HostName, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                    <Label Grid.Row="2" Content="Adresse IP:" Style="{StaticResource LabelStyle}"/>
                    <TextBox Grid.Row="3" Text="{Binding IPAddress, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

                    <Label Grid.Row="4" Content="Affectation des tapis:" Style="{StaticResource LabelStyle}"/>
                    <Border Grid.Row="5" BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5" MinHeight="100">
                        <ItemsControl ItemsSource="{Binding DataContext.TapisDisponiblesPourEdition, RelativeSource={RelativeSource AncestorType=Window}}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <CheckBox Content="{Binding DisplayName}" 
                                              IsChecked="{Binding IsSelected}" 
                                              Style="{StaticResource CheckboxStyle}" 
                                              Margin="5"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Border>

                    <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
                        <telerik:RadButton telerik:StyleManager.Theme="Expression_Dark" 
                                           Command="{Binding DataContext.CmdSaveEcran, RelativeSource={RelativeSource AncestorType=Window}}"
                                           IsEnabled="{Binding DataContext.CmdSaveEcran.CanExecute, RelativeSource={RelativeSource AncestorType=Window}}"
                                           ToolTip="Enregistrer les modifications ou ajouter le nouvel écran."
                                           Width="100" Height="30" Margin="5">
                            <WrapPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Tools;component/data/images/icons/black/ok-32.png" Height="20" Margin="0 0 5 0"/>
                                <Label Content="Sauver" Foreground="White"/>
                            </WrapPanel>
                        </telerik:RadButton>
                        <telerik:RadButton telerik:StyleManager.Theme="Expression_Dark" 
                                           Command="{Binding DataContext.CmdCancelEcran, RelativeSource={RelativeSource AncestorType=Window}}"
                                           IsEnabled="{Binding DataContext.CmdCancelEcran.CanExecute, RelativeSource={RelativeSource AncestorType=Window}}"
                                           ToolTip="Annuler les modifications et repasser en mode 'Ajout'."
                                           Width="100" Height="30" Margin="5">
                            <WrapPanel Orientation="Horizontal">
                                <Image Source="pack://application:,,,/Tools;component/data/images/icons/black/cancel-32.png" Height="20" Margin="0 0 5 0"/>
                                <Label Content="Annuler" Foreground="White"/>
                            </WrapPanel>
                        </telerik:RadButton>
                    </StackPanel>

                </Grid>
            </ScrollViewer>
        </Border>


        <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal" Grid.Row="2" Margin="10" Grid.ColumnSpan="2" >
            <telerik:RadButton x:Name="ButOk" Width="70" Height="30" telerik:StyleManager.Theme="Expression_Dark" Click="ButOk_Click">
                <WrapPanel Orientation="Horizontal">
                    <Label x:Name="ButOkLabel"  Content="Ok" Foreground="White"/>
                </WrapPanel>
            </telerik:RadButton>
        </WrapPanel>
    </Grid>
</Window>