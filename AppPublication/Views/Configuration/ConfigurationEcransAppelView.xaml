<Window x:Class="AppPublication.Views.Configuration.ConfigurationEcransAppelView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:behave="clr-namespace:Tools.Framework;assembly=Tools"
        mc:Ignorable="d"
        Title="Configuration des Écrans d'Appel" Height="480" Width="860" Background="Black"
        WindowStartupLocation="CenterScreen"
        behave:WindowLoadBehavior.LoadedCommand="{Binding CmdOnLoaded}">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Style="{StaticResource Header1Style}" Margin="0,0,0,10">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="pack://application:,,,/Tools;component/data/images/icons/black/monitor-32.png" Height="25" Margin="10,0"/>
                <TextBlock Text="Gestion des Écrans d'Appel" Style="{StaticResource Header1TextStyle}" Margin="0"/>
            </StackPanel>
        </StackPanel>

        <Border Grid.Row="1" BorderBrush="White" BorderThickness="1" Margin="0,0,0,10">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5">
                    <telerik:RadButton Command="{Binding CmdAjouterEcran}" 
                                       Style="{StaticResource RadButtonStyle1}"
                                       telerik:StyleManager.Theme="Expression_Dark"
                                       ToolTip="Ajouter un nouvel écran"
                                       Width="30" Height="30"
                                       Tag="pack://application:,,,/Tools;component/data/images/icons/black/add_list-32.png">
                    </telerik:RadButton>
                </StackPanel>

                <telerik:RadGridView Grid.Row="1" ItemsSource="{Binding EcransViewModels}" 
                                     Style="{StaticResource GridViewStyle1}"
                                     ShowGroupPanel="False"
                                     AutoGenerateColumns="False"
                                     IsReadOnly="False"
                                     CanUserInsertRows="False"
                                     CanUserDeleteRows="False"
                                     EnableRowVirtualization="True" 
                                    EnableColumnVirtualization="False"
                                    GroupRenderMode="Flat">
                        <telerik:RadGridView.Columns>

                        <telerik:GridViewDataColumn Header="N°" DataMemberBinding="{Binding Id}" IsReadOnly="True" Width="30" TextAlignment="Center" ToolTip="ID autogénéré de l'écran" />

                        <telerik:GridViewDataColumn Header="Description" DataMemberBinding="{Binding Description}" Width="150" ToolTip="(Optionnel) Description de l'écran" />

                        <telerik:GridViewDataColumn Header="Identifiant" DataMemberBinding="{Binding RawUserInput, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="120" ToolTip="Identifiant de l'écran sur le réseau, IP ou Hostname"/>


                        <telerik:GridViewDataColumn Header="Hostname" DataMemberBinding="{Binding Hostname}" IsReadOnly="True" Width="120" ToolTip="Hostname détecté pour l'identifiant de l'écran" >
                            <telerik:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding Hostname}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <Control Grid.Column="1" Style="{StaticResource TrailSpinnerStyle}" 
                                                 Width="15" Height="15"        
                                                 Foreground="White"
                                                 Visibility="{Binding IsRechercheHostnameEnCours, Converter={StaticResource BoolToVisibilityConverter}}"
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellTemplate>
                        </telerik:GridViewDataColumn>
                        <telerik:GridViewDataColumn Header="IP" DataMemberBinding="{Binding AdresseIP}" IsReadOnly="True" Width="100" ToolTip="Adresse IP détectée pour l'identifiant de l'écran" >
                            <telerik:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="auto"/>
                                            <ColumnDefinition Width="20"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0" Text="{Binding AdresseIP}" VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                        <Control Grid.Column="1" Style="{StaticResource TrailSpinnerStyle}" 
                                                 Width="15" Height="15"        
                                                 Foreground="White"
                                                 Visibility="{Binding IsRechercheIpEnCours, Converter={StaticResource BoolToVisibilityConverter}}"
                                                         HorizontalAlignment="Center" 
                                                         VerticalAlignment="Center" />
                                    </Grid>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellTemplate>
                        </telerik:GridViewDataColumn>

                        <telerik:GridViewColumn Header="Sélection Tapis" IsResizable="False" Width="240" ToolTip="Liste des tapis à afficher sur l'écean (max. 4)">
                            <telerik:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding ListeTapisSelectionnesAffiche, FallbackValue='Aucun tapis'}" VerticalAlignment="Center" Margin="5"/>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellTemplate>

                            <telerik:GridViewColumn.CellEditTemplate>
                                <DataTemplate>
                                    <ItemsControl ItemsSource="{Binding ListeTapisViewModels}">
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel Orientation="Horizontal"/>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <CheckBox Content="{Binding DisplayName}" 
                                                          IsChecked="{Binding IsSelected, Mode=TwoWay}"
                                                          Style="{StaticResource CheckboxStyle}"
                                                          Margin="2,0,8,0"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellEditTemplate>
                        </telerik:GridViewColumn>

                        <telerik:GridViewColumn IsResizable="False" Header="" Width="40">
                            <telerik:GridViewColumn.CellTemplate>
                                <DataTemplate>
                                    <telerik:RadButton Command="{Binding DeleteCommand}" 
                                                       CommandParameter="{Binding}"
                                                       ToolTip="Supprimer cet écran"
                                                       Width="20" Height="20"
                                                       telerik:StyleManager.Theme="Expression_Dark"
                                                       Style="{StaticResource RadButtonStyle1}"
                                                       Tag="pack://application:,,,/Tools;component/data/images/icons/black/delete-32.png">
                                    </telerik:RadButton>
                                </DataTemplate>
                            </telerik:GridViewColumn.CellTemplate>
                        </telerik:GridViewColumn>

                    </telerik:RadGridView.Columns>
                </telerik:RadGridView>
            </Grid>
        </Border>

        <WrapPanel Grid.Row="2" HorizontalAlignment="Right" Orientation="Horizontal">
            <telerik:RadButton x:Name="ButClose" Width="100" Height="30" 
                               telerik:StyleManager.Theme="Expression_Dark" 
                               IsCancel="True"
                               Click="ButClose_Click">
                <WrapPanel Orientation="Horizontal">
                    <Label Content="Fermer" Foreground="White" VerticalAlignment="Center"/>
                </WrapPanel>
            </telerik:RadButton>
        </WrapPanel>
    </Grid>
</Window>